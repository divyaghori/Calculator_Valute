<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cal_display"
    android:orientation="vertical"
    tools:context=".Activity.CalculatorActivityy">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="0.9dp"
        android:layout_marginRight="0.1dp"
        android:layout_weight="3"
        android:background="@color/cal_display"
        android:orientation="vertical">
        <TextView
            android:id="@+id/simplemsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/robotolight"
            android:gravity="end"
            android:visibility="gone"
            android:textColor="@color/white"
            android:text="Enter 4 digit password"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/simplesubmsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/robotolight"
            android:gravity="end"
            android:visibility="gone"
            android:textColor="@color/white"
            android:text="Press '=' to confirm"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/robotolight"
            android:gravity="end"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/workingsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/robotolight"
            android:gravity="end"
            android:textColor="@color/white"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="4">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/cal_no_button"
                android:fontFamily="@font/robotolight"
                android:onClick="sevenOnClick"
                android:padding="@dimen/_28sdp"
                android:text="7"
                android:textColor="@color/cal_text"
                android:textSize="25sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/cal_no_button"
                android:fontFamily="@font/robotolight"
                android:onClick="fourOnClick"
                android:padding="@dimen/_28sdp"
                android:text="4"
                android:textColor="@color/cal_text"
                android:textSize="25sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/cal_no_button"
                android:fontFamily="@font/robotolight"
                android:onClick="oneOnClick"
                android:padding="@dimen/_28sdp"
                android:text="1"
                android:textColor="@color/cal_text"
                android:textSize="25sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/cal_no_button"
                android:fontFamily="@font/robotolight"
                android:onClick="zeroOnClick"
                android:padding="@dimen/_28sdp"
                android:text="0"
                android:textColor="@color/cal_text"
                android:textSize="25sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="4">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/cal_no_button"
                android:fontFamily="@font/robotolight"
                android:onClick="eightOnClick"
                android:padding="@dimen/_28sdp"
                android:text="8"
                android:textColor="@color/cal_text"
                android:textSize="25sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/cal_no_button"
                android:fontFamily="@font/robotolight"
                android:onClick="fiveOnClick"
                android:padding="@dimen/_28sdp"
                android:text="5"
                android:textColor="@color/cal_text"
                android:textSize="25sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/cal_no_button"
                android:fontFamily="@font/robotolight"
                android:onClick="twoOnClick"
                android:padding="@dimen/_28sdp"
                android:text="2"
                android:textColor="@color/cal_text"
                android:textSize="25sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_dot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/cal_no_button"
                android:onClick="decimalOnClick"
                android:padding="@dimen/_28sdp"
                android:text="."
                android:textColor="@color/cal_text"
                android:textSize="25sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="4">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/cal_no_button"
                android:fontFamily="@font/robotolight"
                android:onClick="nineOnClick"
                android:padding="@dimen/_28sdp"
                android:text="9"
                android:textColor="@color/cal_text"
                android:textSize="25sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/cal_no_button"
                android:fontFamily="@font/robotolight"
                android:onClick="sixOnClick"
                android:padding="@dimen/_28sdp"
                android:text="6"
                android:textColor="@color/cal_text"
                android:textSize="25sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/cal_no_button"
                android:fontFamily="@font/robotolight"
                android:onClick="threeOnClick"
                android:padding="@dimen/_28sdp"
                android:text="3"
                android:textColor="@color/cal_text"
                android:textSize="25sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_equal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="0.1dp"
                android:layout_weight="1"
                android:background="@color/cal_blue"
                android:fontFamily="@font/robotolight"
                android:onClick="equalsOnClick"
                android:padding="@dimen/_28sdp"
                android:text="="
                android:textColor="@color/cal_text"
                android:textSize="40sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="5">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_clear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/cal_op_button"
                android:fontFamily="@font/robotothin"
                android:onClick="clearOnClick"
                android:text="DEL"
                android:textColor="@color/cal_text"
                android:textSize="25sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_divide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/cal_op_button"
                android:fontFamily="@font/robotothin"
                android:onClick="divisionOnClick"
                android:text="\u00F7"
                android:textColor="@color/cal_text"
                android:textSize="40sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_multi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/cal_op_button"
                android:fontFamily="@font/robotothin"
                android:onClick="timesOnClick"
                android:text="x"
                android:textColor="@color/cal_text"
                android:textSize="25sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_sub"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/cal_op_button"
                android:fontFamily="@font/robotothin"
                android:onClick="minusOnClick"
                android:text="-"
                android:textColor="@color/cal_text"
                android:textSize="40sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/cal_op_button"
                android:fontFamily="@font/robotothin"
                android:onClick="plusOnClick"
                android:text="+"
                android:textColor="@color/cal_text"
                android:textSize="40sp" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>